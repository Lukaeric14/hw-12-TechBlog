<div class="text-center">
  <h1>{{title}}</h1>
  <p>{{content}}</p>
  <footer>Created by {{user.username}} on {{date_created}}</footer>

  <h2>Comments</h2>
  {{#each comments as |comment|}}
    <div class="row mb-4 project">
      <div class="col-md-7">
        <p>
          {{comment.comment}}
        </p>
      </div>
    </div>
  {{/each}}

  <h2>Add Comment</h2>
  <p>
    <form action="/api/comments" id="login" method="POST">
      <input
        type="text"
        class="form-control"
        name="post_id"
        id="post_id"
        placeholder="Enter the post title"
        value="{{id}}"
        hidden
      />
      <div class="form-group">
        <label for="content">Comment
          <span class="text-danger">*</span></label>
        <textarea
          type="text"
          class="form-control"
          name="comment"
          id="comment"
          placeholder="Enter the comment"
        ></textarea>
      </div>
      <div class="form-group">
        <input type="submit" value="Comment" class="btn btn-info btn-block" />
      </div>
    </form>
  </p>
</div>